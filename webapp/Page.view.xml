<mvc:View
	xmlns:core="sap.ui.core"
	controllerName="sap.m.sample.Tree.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Tree
		id="Tree"
		items="{path: '/'}"
		mode="MultiSelect">
		<StandardTreeItem title="{text}">
			<customData>
				<core:CustomData
					key="selectable"
					value="{path: 'nodes', formatter: '.bSelectable'}"
					writeToDom="true" />
			</customData>
		</StandardTreeItem>
	</Tree>
</mvc:View>